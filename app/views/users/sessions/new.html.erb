  <!-- Navbar section -->
  <header>

    <%= render 'shared/navbar'%>
<section>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="sign-main d-flex align-items-center">
    <div class="row sign-form-area mx-auto">
      <div class="col-lg-6 col-md-8 col-sm-12 sign-form p-0">
        <ul class="nav nav-tabs border-0" id="myTab" role="tablist">
          <li class="nav-item sign-in nav-link-active" role="presentation">
            <button class="nav-link btn-1 p-0 f-20 mx-auto active border-0" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true"><a class="anchor" href="/users/sign_in">Sign In</a></button>
          </li>
          <li class="nav-item sign-up nav-link-inactive" role="presentation">
            <button class="nav-link btn-2 p-0 f-20 mx-auto border-0" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><a class="anchor"href="/users/sign_up">Sign up</a></p></button>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="sign-in-content d-flex flex-column">
              <%= f.email_field :email, placeholder:"Email Address" %>
              <%= f.password_field :password, placeholder:"Password" %>
            </div>
            <div class="forgot-pw text-end f-18">
              <a href="/users/password/new">Forgot Password?</a>
            </div>
            <div class="sign-in-button text-center">
              <%= f.submit "Sign in",class:"btn text-white p-0 fw-bold f-20 text-center f-20", style:"font-size: 20px;" %>
            </div>
            <div class="form-already text-center f-20">
              <p class="m-0 last-text">Donâ€™t have an account? <a href="/users/sign_up">Sign up</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</section>


<%= javascript_include_tag 'sign'%>
